  <bean id="weatherReportRepo"
        class="org.powertac.common.repo.WeatherReportRepo">
  </bean>
  
  <bean id="weatherForecastRepo"
        class="org.powertac.common.repo.WeatherForecastRepo">
  </bean>
  
