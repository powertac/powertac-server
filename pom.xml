<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.powertac</groupId>
    <artifactId>server-master</artifactId>
    <version>0.6.3</version>
    <relativePath />
  </parent>

  <artifactId>genco</artifactId>
  <name>Power TAC genco</name>
  <version>1.0.0-SNAPSHOT</version>
  <description>
    Models of simple wholesale power producers, and a wholesale buyer
  </description>

  <!-- Sonatype OSS repo for resolving snapshot modules -->
  <repositories>
    <repository>
      <id>sonatype</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>org.powertac</groupId>
      <artifactId>server-interface</artifactId>
      <version>0.6.3</version>
    </dependency>

  </dependencies>
  
  <scm>
    <connection>scm:git:git//github.com/powertac/genco.git</connection>
    <developerConnection>scm:git:git@github.com:powertac/genco.git</developerConnection>
    <url>https://github.com/powertac/genco</url>
  </scm>

  <!-- needs AspectJ build -->
  <build>
    <plugins>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>aspectj-maven-plugin</artifactId>
	<version>1.3</version>
	<executions>
	  <execution>
	    <goals>
	      <goal>compile</goal>
	      <goal>test-compile</goal>
	    </goals>
	    <configuration>
	      <verbose>false</verbose>
	      <complianceLevel>1.6</complianceLevel>
	      <weaveDependencies>
		<weaveDependency>
		  <groupId>org.powertac</groupId>
		  <artifactId>common</artifactId>
		</weaveDependency>
	      </weaveDependencies>
	    </configuration>
	  </execution>
	</executions>
      </plugin>
    </plugins>
  </build>
</project>
