<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.powertac</groupId>
    <artifactId>server-master</artifactId>
    <version>1.3.3-SNAPSHOT</version>
    <relativePath />
  </parent>

  <artifactId>genco</artifactId>
  <version>1.3.3-SNAPSHOT</version>
  <name>Power TAC genco</name>
  <description>
    Models of simple wholesale power producers, and a wholesale buyer
  </description>

  <!-- Sonatype OSS repo for resolving snapshot modules -->
  <repositories>
    <repository>
      <id>sonatype</id>
      <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
    </repository>
  </repositories>

  <properties>
    <aspectj-plugin.version>1.8</aspectj-plugin.version>
    <aspectj-plugin.compliance>1.8</aspectj-plugin.compliance>
    <commons-math.version>3.5</commons-math.version>
  </properties>


  <dependencies>
    <dependency>
      <groupId>org.powertac</groupId>
      <artifactId>server-interface</artifactId>
      <version>${powertac.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-math3</artifactId>
      <version>${commons-math.version}</version>
    </dependency>

  </dependencies>
  
  <scm>
    <connection>scm:git:git//github.com/powertac/genco.git</connection>
    <developerConnection>scm:git:git@github.com:powertac/genco.git</developerConnection>
    <url>https://github.com/powertac/genco</url>
  </scm>

  <!-- needs AspectJ build -->
  <build>
    <plugins>
      <plugin>
	<groupId>org.codehaus.mojo</groupId>
	<artifactId>aspectj-maven-plugin</artifactId>
	<version>${aspectj-plugin.version}</version>
	<executions>
	  <execution>
	    <goals>
	      <goal>compile</goal>
	      <goal>test-compile</goal>
	    </goals>
	    <configuration>
	      <verbose>false</verbose>
	      <complianceLevel>${aspectj-plugin.compliance}</complianceLevel>
	      <weaveDependencies>
		<weaveDependency>
		  <groupId>org.powertac</groupId>
		  <artifactId>common</artifactId>
		</weaveDependency>
	      </weaveDependencies>
	    </configuration>
	  </execution>
	</executions>
      </plugin>
    </plugins>
  </build>
</project>
